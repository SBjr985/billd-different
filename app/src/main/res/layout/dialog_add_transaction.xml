<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/amountInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amount (use + or -)"
            android:inputType="numberDecimal|numberSigned"
            android:padding="8dp" />

        <EditText
            android:id="@+id/dateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Start Date (MM/DD/YYYY)"
            android:inputType="date"
            android:padding="8dp" />

        <EditText
            android:id="@+id/sourceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Source"
            android:inputType="text"
            android:padding="8dp" />

        <!-- Category section -->
        <TextView
            android:id="@+id/categoryLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:paddingTop="8dp" />

        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown" />

        <CheckBox
            android:id="@+id/isPayrollCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is Payroll?" />

        <CheckBox
            android:id="@+id/isRecurringCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recurring Transaction?" />

        <!-- End date appears only if recurring is checked -->
        <EditText
            android:id="@+id/endDateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Date (MM/DD/YYYY)"
            android:inputType="date"
            android:padding="8dp"
            android:visibility="gone" />

        <!-- Frequency section -->
        <TextView
            android:id="@+id/frequencyLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency"
            android:paddingTop="8dp"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/frequencySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- âœ… Skipped Checkbox -->
        <CheckBox
            android:id="@+id/isSkippedCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip this instance"
            android:layout_marginTop="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="end">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />

            <Button
                android:id="@+id/saveTransactionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginStart="16dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
