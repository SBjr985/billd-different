<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?android:selectableItemBackground">

    <TextView
        android:id="@+id/summaryMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="January 2025"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/summaryIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Income: $0.00"
        android:textSize="14sp"
        android:textColor="#4CAF50" />

    <TextView
        android:id="@+id/summaryExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expenses: $0.00"
        android:textSize="14sp"
        android:textColor="#F44336" />

    <TextView
        android:id="@+id/summaryNet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Net: $0.00"
        android:textSize="14sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/summaryBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance: $0.00"
        android:textSize="14sp"
        android:textColor="#3F51B5" />
</LinearLayout>
