<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transactionItemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/transactionItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@drawable/transaction_background"
        android:elevation="2dp">

        <!-- Space for alignment -->
        <Space
            android:layout_width="8dp"
            android:layout_height="match_parent" />

        <!-- Paid Checkbox -->
        <CheckBox
            android:id="@+id/itemPaidCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" />

        <!-- Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/itemPayrollIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_work"
                android:visibility="invisible"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:id="@+id/itemMoneyIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_attach_money"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/itemRecurringIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_repeat"
                android:contentDescription="Recurring"
                android:visibility="invisible"
                android:layout_marginStart="4dp"
                android:tint="#666666" />

            <ImageView
                android:id="@+id/itemSkippedIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_skipped"
                android:contentDescription="Skipped"
                android:visibility="gone"
                android:layout_marginStart="4dp"
                android:tint="#990000" />
        </LinearLayout>

        <!-- Date & Source -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/itemDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2025-06-09"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/itemSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Source"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Amount & Balance -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/itemAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="14sp"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
